@model BookingHotel.Models.ViewModels.ListViewModel

<div class="row">
    @foreach (var p in Model.Rooms ?? Enumerable.Empty<Room>())
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body d-flex flex-column">
                <h5 class="card-title fs-3">@p.Number</h5> 
                <p class="card-text text-muted fs-5">@p.Description</p> 
                <h6 class="card-subtitle mb-2 text-primary fs-4">@p.Class</h6> 
                <p class="card-text text-success fs-5">@p.Price.ToString("c")</p> 
            </div>
            </div>
        </div>
    }
</div>

<div class="pagination justify-content-center">
    @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
    {
        <a href="@Url.Action("Index", new { page = i })"
           class="page-link @(i == Model.PagingInfo.CurrentPage ? "active" : "")">@i</a>
    }
</div>
